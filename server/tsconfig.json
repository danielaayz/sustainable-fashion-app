{
   "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": ".",
      "types": ["node", "express", "multer"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true
   },
   "include": ["**/*.ts"],
   "exclude": ["node_modules", "**/*.test.ts"]
}
